
@model IndexModel

<h1> Hello From Preview - we are under construction!</h1>

<!-- 
    This is a read only page     
-->


<div class="panel panel-default col-lg-12">
    <div class="panel-body">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <!-- SEND TO-->
                    <div class="form-group">
                        <label asp-for="bridgeGreetings.SendTo"></label>

                        <span> </span>
                        <input asp-for="bridgeGreetings.SendTo"
                               type="text"
                               class="form-control"
                               maxlength="100">

                        <!-- Server side validation-->
                        <span asp-validation-for="bridgeGreetings.SendTo"
                              class="text-danger"></span>
                    </div>

                    <div class="form-group">

                        <label asp-for="bridgeGreetings.SendersEmail"></label>

                        <input asp-for="bridgeGreetings.SendersEmail"
                               type="email" class="form-control"
                               maxlength="255" required>

                        <!-- Server side validation-->
                        <span asp-validation-for="bridgeGreetings.SendersEmail"
                              class="text-danger"></span>
                    </div>
                </div>



                <!--SEND FROM-->
                <div class="col-lg-6 col-md-6">

                    <!--Name-->
                    <div class="form-group">
                        <label asp-for="bridgeGreetings.FromName"></label>
                        <input asp-for="bridgeGreetings.FromName"
                               type="text" class="form-control"
                               maxlength="100">
                    </div>

                    <!--Email-->
                    <div class="form-group">
                        <label asp-for="bridgeGreetings.FromEmail"></label>
                        <input asp-for="bridgeGreetings.FromEmail"
                               type="email" class="form-control"
                               maxlength="255">
                    </div>
                </div>
            </div>


            <!-- SUBJECT + MESSAGE COMPOSITION-->
            <div class="row">
                <div class="col-lg-12">

                    <div class="form-group">
                        <!-- Subject-->
                        <label asp-for="bridgeGreetings.Subject"></label>
                        <input asp-for="bridgeGreetings.Subject"
                               type="text" class="form-control" maxlength="100">

                        <div class="countdown"></div>

                        <!-- Server side validation-->
                        <span asp-validation-for="bridgeGreetings.Subject"
                              class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <!-- Message-->
                        <label asp-for="bridgeGreetings.Message"></label>
                        <textarea asp-for="bridgeGreetings.Message"
                                  class="form-control"
                                  maxlength="500" rows="6"></textarea>
                        <span class="countdown"></span>                        

                        <!-- Server side validation-->
                        <span asp-validation-for="bridgeGreetings.Message"
                              class="text-danger"></span>
                    </div>

                </div>
            </div>

            <div class="row">
                <!--SEND CARD -->
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <div class="form-group">
                        <button type="button" class="btn btn-default btn-block">Send</button>
                    </div>
                </div>
            </div>
    </div>
</div>