@model PreviewModel
<!--
    This is a read only page
-->

<div class="panel panel-default col-lg-12">
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <!-- SEND TO-->
                <div class="form-group">
                    <label asp-for="Greetings.ToName"></label>
                    <div>@Html.Raw(Model.Greetings.ToName)</div>
                </div>

                <div class="form-group">

                    <label asp-for="Greetings.ToEmail"></label>
                    <div>@Html.Raw(Model.Greetings.ToEmail)</div>
                </div>
            </div>

            <!--SEND FROM-->
            <div class="col-lg-6 col-md-6">

                <!--Name-->
                <div class="form-group">
                    <label asp-for="Greetings.FromName"></label>
                    <div>@Html.Raw(Model.Greetings.FromName)</div>
                </div>

                <!--Email-->
                <div class="form-group">
                    <label asp-for="Greetings.FromEmail"></label>
                    <div>@Html.Raw(Model.Greetings.FromEmail)</div>
                </div>
            </div>
        </div>

        <!-- SUBJECT + MESSAGE COMPOSITION-->
        <div class="row">
            <div class="col-lg-12">

                <div class="form-group">
                    <!-- Subject-->
                    <label asp-for="Greetings.Subject"></label>
                    <div>@Html.Raw(Model.Greetings.Subject)</div>
                </div>

                <div class="form-group">
                    <!-- Message-->
                    <label asp-for="Greetings.Message"></label>
                    <div>@Html.Raw(Model.Greetings.Message)</div>
                </div>

            </div>
        </div>

        <div class="has-error">@Model.ErrorMessage</div>
        <!-- NEED form here to call HTTP request-->
        <div class="row">
            <form method="post">
                <!--SEND CARD -->
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <div class="form-group">
                        <input type="hidden" asp-for="Greetings.ID" />
                        <input type="submit" class="btn btn-default btn-block" value="Send" />
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>