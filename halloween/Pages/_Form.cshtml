@page
    @model IndexModel

<h1> Hello from Form !</h1>

<div class="row">

    <form class="as-transparent-form" method="post">

        <div class="row">
            <div class="col-lg-12 col-md-4">
                <!-- SEND TO-->
                <div class="form-group">
                    @*<input type="text" class="form-control" name="sendTo" placeholder="Send To"
                           maxlength="100" required>*@
                    @Html.TextBoxFor(model => model.bridgeGreetings.SendTo,
                            new { type = "text", @class = "form-control", placeholder = "Send To", maxkength = "100" })

                    @Html.ValidationMessageFor(model =>model.bridgeGreetings.SendTo)
                </div>
               
                <div class="form-group">
                    <input type="email" class="form-control" name="sendersEmail" placeholder="Sender's Email"
                           maxlength="255" required>
                </div>
            </div>

            <!--SEND FROM-->
            <div class="col-lg-12 col-md-4">
                <div class="form-group">
                    <input type="text" class="form-control" name="fromName" placeholder="From Name"
                           maxlength="100">
                </div>

                <div class="form-group">
                    <input type="email" class="form-control" name="fromEmail" placeholder="From Email"
                           required maxlength="255">
                </div>
            </div>
        </div>


        <!-- SUBJECT + MESSAGE COMPOSITION-->
        <div class="row">
            <div class="col-lg-12 col-md-8">

                <div class="form-group">
                    <input type="text" class="form-control" name="subject" placeholder="Subject" maxlength="100">
                    <div class="countdown"></div>
                </div>

                <textarea class="form-control" name="message" placeholder="Send your spooky greeting here!"
                          maxlength="500" rows="6"></textarea>
                <span class="countdown"></span>

                <br>

            </div>
        </div>

        <div class="row">
            @*<div class="form-group">
                    @Html.Partial("_reCAPTCHA")
                </div>*@

            <!--SUBMIT -->
            <div class="col-lg-12 col-md-8">
                <div class="form-group">
                    <button class="btn btn-default pull-right" type="submit">Submit</button>
                </div>
            </div>
        </div>

    </form>

</div>