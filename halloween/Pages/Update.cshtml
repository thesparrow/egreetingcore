@page
@model IndexModel
@{
    ViewData["Title"] = "Halloween E-Greeting";
}

@* use a ViewBag *@
<link rel="stylesheet" href="~/css/dark-theme.css">

<div>

    <div class="page-header">
        <h1> Let your friends know - they are never alone this Halloween... </h1>
    </div>


    <div class="row">
        <div class="col-lg-7">
            <div class="card"> @Html.Partial("_Card")</div>
        </div>

        <div class="col-lg-5">

            @Html.Partial("_Form")

        </div>
    </div>
</div>


@section Scripts {
    <script src="http://www.google.com/recaptcha/api.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}