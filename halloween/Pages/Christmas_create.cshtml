@page
@model halloween.Pages.ChristmasModel


@{
    ViewData["Title"] = "Christmas E-Greeting";
}

@* use a ViewBag *@
<link rel="stylesheet" href="~/css/christmas-theme.css">

    <div class="page-header">
        <h1> Wish your friends a warm Christmas</h1>
    </div>

<div class="container-fluid background-img">
    <div class="row">
        

        <div class="col-lg-7 col-md-6 col-sm-12">
            <img class="img-rounded" src="~/images/beautiful_merry_christmas.gif" alt="christmas image" />
        </div>

        <div class="col-lg-5 col-md-5 col-sm-12">
            @Html.Partial("_Form", Model.Greetings)
        </div>
    </div>
    
</div>
    


@section Scripts {
    <script src="http://www.google.com/recaptcha/api.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}