@page
@model IndexModel
@{
    ViewData["Title"] = "Halloween E-Greeting";
}


<link rel="stylesheet" href="~/css/dark-theme.css">

<div>

    <div class="page-header">
        <h1> Let your friends know - they are never alone this Halloween... </h1>
    </div>


    <div class="row">
        <div class="col-lg-7">
            <div class="card"> @Html.Partial("_Card")</div>
            
        </div>

        <div class="col-lg-5">

            @if (@Model.isPreviewPage)
            {
                @Html.Partial("_Preview")
            }
            else
            {
                @Html.Partial("_Form")

                @*@Html.Partial("_animation")*@

               
                @section Scripts {
                    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
                    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
                }
            }

        </div>

   </div>

       
</div>
