@page
@model egreeting.Pages.christmas.PreviewModel


@{
    ViewBag.theme = "christmas";
    ViewBag.dimension = "portrait";

    ViewBag.meta_title = " Preview of your " + @ViewBag.theme + " message";
    ViewBag.meta_desc = "Create your greeting now.";
    ViewBag.meta_image = "/images/beautiful_merry_christmas.gif";
    ViewBag.meta_keyword = "christmas";

}


<div>
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-4">
            <img class="img-responsive img-rounded bottom" src="@ViewBag.meta_image"
                 alt="christmas image" />
        </div>

        <div class="col-lg-5">

            @Html.Partial("_Preview", Model.Greetings)


            <div class="row">
                <!--SEND CARD -->
                <form method="post">
                    <div class="btn-group">

                        <div class="col-lg-6">
                            <a href="Update?id=@Model.Greetings.ID" class="btn btn-primary">Edit</a>
                        </div>

                        <div class="col-lg-6 col-lg-push-2">
                            <input type="submit" value="Send" class="btn btn-primary" />
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



