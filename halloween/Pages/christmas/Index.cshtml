@page
@model egreeting.Pages.christmas.IndexModel


@{
    ViewBag.theme = "christmas";
    ViewBag.dimension = "portrait";

    ViewBag.meta_title = "Wish your friends a warm Christmas.";
    ViewBag.meta_desc = "Create your greeting now.";
    ViewBag.meta_image = "/images/beautiful_merry_christmas.gif";
    ViewBag.meta_keyword = "christmas";
}


<link href="~/css/christmas-theme.css" rel="stylesheet" />

<div class="container @ViewBag.theme">
    <div class="row">
        <div class="col-sm-6 text-center">
            <img class="img-responsive img-rounded bottom" src="@ViewBag.meta_image" 
                 alt="christmas image" />
        </div>
        <div class="col-sm-6 text-center">
            @Html.Partial("_Form", Model.Greetings)
        </div>
    </div>

</div>

@section Scripts {
    <script src="http://www.google.com/recaptcha/api.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}